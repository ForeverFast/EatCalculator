@inherits BaseComponent

<div class="@GetCssName(nameof(MealPortionsInfo)) @ClassName"
@attributes="UserAttributes">
    <MudContainer Class="d-flex flex-column align-center px-0 py-2">
        <Iterations Items="Meal.Portions" Context="portion">
            <MudContainer Class="d-flex flex-row align-center border rounded mt-2 px-2">
                @{
                    var product = _productStateFacade.GetProductById(portion.ProductId);
                }
                <MudText Class="px-1">@product?.Title</MudText>
                <MudText Class="px-1 ms-auto">@GetPortionsInfo(portion,product!)</MudText>
            </MudContainer>
        </Iterations>
    </MudContainer>
</div>